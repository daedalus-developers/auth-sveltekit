{
	"name": "auth-kit",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"start": "pnpm build && node -r dotenv/config build",
		"db:seed": "tsx ./seed.ts",
		"db:studio": "drizzle-kit studio --verbose",
		"db:migrate": "pnpm run db:generate && pnpm run db:push",
		"db:generate": "drizzle-kit generate:pg",
		"db:push": "drizzle-kit push:pg",
		"db:pull": "drizzle-kit introspect:pg",
		"db:check": "drizzle-kit check:pg",
		"db:up": "drizzle-kit up:pg",
		"db:drop": "drizzle-kit drop",
		"shadcn": "pnpx shadcn-svelte@latest add",
		"zod2md": "npx zod2md --entry src/lib/types/index.ts --title FormSchemas --output docs/schemas.md"
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@svelte-put/copy": "^3.0.0",
		"@svelte-put/qr": "^1.0.5",
		"@sveltejs/adapter-auto": "^3.2.0",
		"@sveltejs/adapter-node": "^5.0.1",
		"@sveltejs/kit": "^2.5.5",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@tailwindcss/forms": "^0.5.7",
		"@tailwindcss/typography": "^0.5.12",
		"@types/eslint": "^8.56.6",
		"@types/node": "^20.12.2",
		"@types/nodemailer": "^6.4.14",
		"@typescript-eslint/eslint-plugin": "^7.4.0",
		"@typescript-eslint/parser": "^7.4.0",
		"autoprefixer": "^10.4.19",
		"dotenv": "^16.4.5",
		"drizzle-kit": "^0.20.14",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0-next.4",
		"postcss": "^8.4.38",
		"postcss-load-config": "^5.0.2",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"prettier-plugin-tailwindcss": "^0.5.13",
		"svelte": "^4.2.12",
		"svelte-check": "^3.6.8",
		"sveltekit-flash-message": "^2.4.4",
		"sveltekit-rate-limiter": "^0.5.1",
		"sveltekit-view-transition": "^0.5.3",
		"tailwindcss": "^3.4.3",
		"tslib": "^2.4.1",
		"tsx": "^4.7.1",
		"typescript": "^5.4.3",
		"vite": "^5.2.7",
		"vitest": "^1.4.0",
		"zod2md": "^0.1.1"
	},
	"type": "module",
	"dependencies": {
		"@aws-sdk/client-s3": "^3.540.0",
		"@aws-sdk/s3-request-presigner": "^3.540.0",
		"@fontsource-variable/comfortaa": "^5.0.19",
		"@fontsource-variable/montserrat": "^5.0.18",
		"@internationalized/date": "^3.5.2",
		"@lucia-auth/adapter-drizzle": "^1.0.7",
		"@neoconfetti/svelte": "^2.2.1",
		"arctic": "^1.5.0",
		"bits-ui": "^0.21.1",
		"clsx": "^2.1.0",
		"cmdk-sv": "^0.0.17",
		"date-fns": "^3.6.0",
		"drizzle-orm": "^0.30.6",
		"formsnap": "^1.0.0",
		"lucia": "^3.1.1",
		"lucide-svelte": "^0.363.0",
		"mermaid": "^10.9.0",
		"mode-watcher": "^0.3.0",
		"nodemailer": "^6.9.13",
		"oslo": "^1.2.0",
		"pg": "^8.11.4",
		"pino": "^8.19.0",
		"pino-pretty": "^11.0.0",
		"postgres": "^3.4.4",
		"svelte-legos": "^0.2.2",
		"svelte-sonner": "^0.3.20",
		"sveltekit-search-params": "^2.1.2",
		"sveltekit-superforms": "^2.12.2",
		"tailwind-merge": "^2.2.2",
		"tailwind-variants": "^0.2.1",
		"vaul-svelte": "^0.3.0",
		"zod": "^3.22.4"
	},
	"engines": {
		"node": ">=20 <= 21"
	}
}
